{
  "version": "0.0.0",
  "name": "open-social-extension",
  "manifest_version": 2,
  "description": "Watch your notifications on OpenSocial!",
  "browser_action": {
    "default_title": "OpenSocial",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": ["inject.html"],
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "cookies",
    "contextMenus",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "default-src 'self'; connect-src *; script-src 'self'; style-src * 'unsafe-inline'; img-src https://www.opensocial.me/;"
}
